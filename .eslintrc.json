{
    "extends": "airbnb",
    "rules":
    {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/forbid-prop-types": 0,
        "react/require-default-props": 0,
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
    },
    "env": {
        "es6": true
    },
    "globals": {
        "document": true
    }
}